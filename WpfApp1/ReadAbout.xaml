<Window x:Class="WpfApp1.ReadAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ReadAbout" Height="450" Width="400">
    <Grid Background="BurlyWood">
        <WrapPanel ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <TextBlock Margin="120,0,0,0"  Text="Description" FontSize="30" FontFamily="Comic Sans MS">
                   
            </TextBlock>    
            <TextBlock TextWrapping="Wrap" FontSize="15" FontFamily="Comic Sans MS" Foreground="White" x:Name="About" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    
            </TextBlock>
        </WrapPanel>
     
         
    </Grid>
</Window>
